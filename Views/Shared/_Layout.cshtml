
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Users> signInManager;
    
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin>
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>


    <link rel="stylesheet" href="~/css/vendors.min.css" />
    <link rel="stylesheet" href="~/css/icon.min.css" />
    <link rel="stylesheet" href="~/css/style.min.css" />
    <link rel="stylesheet" href="~/css/responsive.min.css" />
    <link rel="stylesheet" href="~/demos/business/business.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />


  <!-- Vendor Styles -->

</head>
<body data-mobile-nav-style="classic">

 <header>
<nav class="navbar navbar-expand-lg header-transparent bg-transparent header-reverse" data-header-hover="light">
    <div class="container-fluid">
        <div class="col-12 d-flex justify-content-between align-items-center">
            <!-- Logo Section -->
            <div class="col-auto col-xxl-3 col-lg-2">
                <a class="navbar-brand" href="index.html">
                    <img src="@Url.Content("~/images/LOGO_LIGHT.png")" data-at2x="@Url.Content("~/images/LOGO_LIGHT.png")"
                         width="160" alt="" class="default-logo">
                    <img src="@Url.Content("~/images/LOGO_DARK.png")" data-at2x="@Url.Content("~/images/LOGO_DARK.png")"
                         width="160" alt="" class="alt-logo">
                    <img src="@Url.Content("~/images/LOGO_DARK.png")" data-at2x="@Url.Content("~/images/LOGO_DARK.png")"
                         alt="" class="mobile-logo">
                </a>
            </div>

            <!-- Navbar Toggle Button for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-label="Toggle navigation">
                <span class="navbar-toggler-line"></span>
                <span class="navbar-toggler-line"></span>
                <span class="navbar-toggler-line"></span>
                <span class="navbar-toggler-line"></span>
            </button>

            <!-- Navbar Items -->
            <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
                <ul class="navbar-nav alt-font">
                    <li class="nav-item"><a asp-controller="Home" asp-action="Index" class="nav-link">About Us</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Sop" class="nav-link">SOP</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Services" class="nav-link">Services</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Audiences" class="nav-link">Audiences</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Technology" class="nav-link">Technology</a></li>
                    <li class="nav-item"><a asp-controller="Home" asp-action="Contact" class="nav-link">Contact</a></li>

                    @if (signInManager.IsSignedIn(User))
                    {
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Dashboard" class="nav-link">Manage Account</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Logout" class="nav-link">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Login" class="nav-link">Login</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="Account" asp-action="Register" class="nav-link">Register</a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Quote Button -->
            <div class="col-auto d-none d-lg-block pt-4">
                <div class="header-button">
                    <a href="contact.aspx" class="btn btn-very-small btn-transparent-white-light btn-rounded">Get a quote</a>
                </div>
            </div>
        </div>
    </div>
</nav>

    </header>

    <div class="container" style="max-width: 100%; margin: auto; padding: auto;">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

       <footer class="pt-5 pb-5 sm-pt-40px sm-pb-45px footer-dark bg-extra-medium-slate-blue">
        <div class="container">
            <div class="row justify-content-between">

                <div class="col-lg-5 col-sm-6 last-paragraph-no-margin order-5 order-sm-4 order-lg-1 text-center text-sm-start">
                    <a href="index.html" class="footer-logo mb-15px d-block d-lg-inline-block">
                            <img src="@Url.Content("~/images/LOGO_LIGHT.png")"
                                data-at2x="@Url.Content("~/images/LOGO_LIGHT.png")" alt="">
                        </a>

                    <p class="w-90 sm-w-100 d-inline-block mb-15px" style="font-size: 14px;">MAHALAKSHMI RESEARCH SERVICES GLOBAL</p>
                    <p>
                        &COPY; 2024 <a href="index.html" target="_blank"
                                       class="text-white text-decoration-line-bottom">MLRS GLOBAL</a>
                    </p>
                </div>


                <div class="col-12 col-lg-6 col-sm-6 xs-mb-30px last-paragraph-no-margin order-4 order-sm-5 order-lg-5">
                    <span class="alt-font d-block text-white mb-5px">Get in touch</span>
                    <div class="d-flex flex-wrap sm-col">
                        <div class="col-lg-6 col-sm-12">
                            <p class="mb-0 text-white "><b>Registered Address:</b></p>
                            <p class="text-white opacity-5">
                                B 3 Acharya Niketan,<br />
                                Mayur Vihar Phase - 1 <br />
                                Delhi - 110091
                            </p>
                        </div>

                        <div class="col-lg-6 col-sm-12">
                            <p class="mb-0 text-white "><b>Canada Address:</b></p>
                            <p class="text-white opacity-5">
                                906, 37 Grosvenor Street,<br /> Toronto Ontario M4Y3G5
                            </p>
                        </div>
                    </div>

                    <div>
                        <a href="tel:+91 9717197070 "
                           class="text-white text-decoration-line-bottom">
                            <span class="__cf_email__"
                                  data-cfemail="">+91 9717197070</span>
                        </a>
                    </div>
                    <div>
                        <a href="mailto: info@mlrsglobal.com"
                           class="text-white text-decoration-line-bottom">
                            <span class="__cf_email__"
                                  data-cfemail="">info@mlrsglobal.com</span>
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
      @RenderSection("VendorStyles", required: false)
  @RenderSection("styles", required: false)
  <!-- Page Styles -->
  @RenderSection("PageStyles", required: false)
     @RenderSection("VendorScripts", required: false)


  

  <!-- Main JS-->
  <script src='~/js/main.js'></script>
    
  <!-- Page Scripts-->
  @RenderSection("PageScripts", required: false)
    
    @await RenderSectionAsync("Scripts", required: false)

    
</body>
</html>
